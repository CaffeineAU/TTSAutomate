<UserControl x:Class="TTSAutomate.PolygonWaveFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Background="Black"
     Foreground="#FF43D996" MouseMove="mainCanvas_MouseMove" MouseUp="mainCanvas_MouseUp" MouseDown="mainCanvas_MouseDown" BorderBrush="#FF003500">
    <Grid >
        <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Hidden"  >
            <Canvas x:Name="mainCanvas" Width="10000" />
        </ScrollViewer>
        <Canvas x:Name="LegendCanvas" Margin="0,0,0,40"/>
    </Grid>
</UserControl>
