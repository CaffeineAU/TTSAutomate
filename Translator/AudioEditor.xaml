<Window x:Class="TTSAutomate.AudioEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTSAutomate"
        mc:Ignorable="d"
        Title="AudioEditor" Height="300" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:PolygonWaveFormControl x:Name="pwfc" Width="700" MouseDown="pwfc_MouseDown" Grid.Row="0" Background="WhiteSmoke" BorderThickness="1" BorderBrush="#FFC3C3C3"   />
    </Grid>
</Window>
